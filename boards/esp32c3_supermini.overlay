/* SPI configuration for ST25R NFC on ESP32-C3 Supermini */

/ {
	chosen {
		zephyr,console = &usb_serial;
		zephyr,shell-uart = &usb_serial;
	};
};

&spi2 {
	status = "okay";

	cs-gpios = <&gpio0 7 GPIO_ACTIVE_LOW>;

	nfc0: st25r@0 {
		compatible = "st,st25r";
		reg = <0x0>;
		spi-max-frequency = <4000000>;
		irq-gpios = <&gpio0 3 GPIO_ACTIVE_HIGH>;
	};
};

&usb_serial {
	status = "okay";
};
